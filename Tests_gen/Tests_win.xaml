<Window x:Class="Tests_gen.Tests_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tests_gen"
        mc:Ignorable="d"
        Title="Tests_win" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="exit_but" Content="Выход" Grid.Column="0" Background="Red" Click="exit_but_Click"></Button>
        <Button x:Name="alter_but" Content="Редактор теста" Grid.Column="1" Click="alter_but_Click"></Button>
        <Button x:Name="pass_but" Content="Тест" Grid.Column="2" Click="pass_but_Click"></Button>
        <Frame Grid.Row="1" Grid.ColumnSpan="3" x:Name="content_frame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
