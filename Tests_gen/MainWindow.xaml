<Window x:Class="Tests_gen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tests_gen"
        mc:Ignorable="d"
        Title="Auth_win" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="ТЕКСТ?" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <Button Grid.Row="1" Margin="10" x:Name="pas_but" Content="Пройти тест" Click="pas_but_Click"></Button>
        <Button Grid.Row="2" Margin="10" x:Name="alt_but" Content="Изменить тест" Click="alt_but_Click"></Button>
        <TextBox Grid.Row="3" x:Name="password"  VerticalAlignment="Center" Visibility="Hidden" Margin="10" TextChanged="password_TextChanged"></TextBox>
    </Grid>
</Window>

